<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/h_sunrise_img_description"
        android:src="@drawable/h_ic_sun"
        app:layout_constraintBottom_toBottomOf="@id/sunriseSunsetContainer"
        app:layout_constraintStart_toStartOf="@id/sunriseSunsetContainer" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sunriseSunsetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/g_grey_border_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="15dp">

        <TextView
            android:id="@+id/sunriseTimingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/product_sans_medium"
            android:textColor="@color/g_grey_text_color_one"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="5:15" />


        <TextView
            android:id="@+id/sunsetTimingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/product_sans_medium"
            android:textColor="@color/g_grey_text_color_one"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="7:03" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/h_sunset_img_description"
        android:src="@drawable/h_ic_moon_icon"
        app:layout_constraintBottom_toBottomOf="@id/sunriseSunsetContainer"
        app:layout_constraintEnd_toEndOf="@id/sunriseSunsetContainer"
        app:layout_constraintTop_toBottomOf="@id/sunriseSunsetContainer" />


    <TextView
        android:id="@+id/sunriseTextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:background="@drawable/g_grey_borders_with_white_fill_bg"
        android:fontFamily="@font/product_sans_medium"
        android:paddingHorizontal="25dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:text="@string/h_sunrise"
        android:textColor="@color/g_orange"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@id/sunriseSunsetContainer"
        app:layout_constraintStart_toStartOf="@id/sunriseSunsetContainer"
        app:layout_constraintTop_toTopOf="@id/sunriseSunsetContainer" />

    <TextView
        android:id="@+id/sunsetTextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:background="@drawable/g_grey_borders_with_white_fill_bg"
        android:fontFamily="@font/product_sans_medium"
        android:paddingHorizontal="25dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:text="@string/h_sunset"
        android:textColor="@color/g_orange"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@id/sunriseSunsetContainer"
        app:layout_constraintEnd_toEndOf="@id/sunriseSunsetContainer"
        app:layout_constraintTop_toTopOf="@id/sunriseSunsetContainer" />



</androidx.constraintlayout.widget.ConstraintLayout>