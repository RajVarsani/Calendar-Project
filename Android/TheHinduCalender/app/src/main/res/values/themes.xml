<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheHinduCalender" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/g_orange</item>


        <!-- Changed Values. -->

        <item name="android:colorEdgeEffect">@color/g_orange_for_bg</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="transparentColorEdgeEffect">
        <item name="android:colorEdgeEffect">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.TheHinduCalender.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>

</resources>