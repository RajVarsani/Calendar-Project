<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:dragScale="5"
            motion:touchAnchorId="@id/widgetsListRecyclerView"
            motion:touchAnchorSide="top" />

        <KeyFrameSet>

            <KeyAttribute
                android:visibility="invisible"
                motion:framePosition="50"
                motion:motionTarget="@id/widgetPageDescriptionTextView">
                <CustomAttribute
                    motion:attributeName="textColor"
                    motion:customColorValue="#00FFFFFF" />

            </KeyAttribute>
            <KeyAttribute
                android:visibility="invisible"
                motion:framePosition="55"
                motion:motionTarget="@id/widgetPageDescriptionTextView">
                <CustomAttribute
                    motion:attributeName="visibility"
                    motion:customIntegerValue="0" />

            </KeyAttribute>
<!--            <KeyAttribute-->
<!--                android:visibility="visible"-->
<!--                motion:framePosition="70"-->
<!--                motion:motionTarget="@id/widgetPageDescriptionTextView" />-->
            <!--            <KeyAttribute-->
            <!--                android:visibility="visible"-->
            <!--                motion:framePosition="50"-->
            <!--                motion:motionTarget="@id/widgetPageDescriptionTextView" />-->
            <!--            <KeyAttribute-->
            <!--                android:layout_height="10dp"-->
            <!--                motion:framePosition="40"-->
            <!--                motion:motionTarget="@id/emptyViewForTransition2" />-->
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/widgetPageDescriptionTextView"
            >
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="#BCBCBC" />
            <CustomAttribute
                motion:attributeName="visibility"
                motion:customIntegerValue="0" />

        </Constraint>


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/widgetPageDescriptionTextView"
            >
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="#00FFFFFF" />
            <CustomAttribute
                motion:attributeName="visibility"
                motion:customIntegerValue="8" />

        </Constraint>

        <Constraint
            android:id="@id/emptyViewForTransition"
            android:visibility="gone" />
        <Constraint
            android:id="@id/emptyViewForTransition2"
            android:visibility="gone" />
        <Constraint
            android:id="@id/emptyViewForTransition3"
            android:visibility="gone" />
    </ConstraintSet>
</MotionScene>