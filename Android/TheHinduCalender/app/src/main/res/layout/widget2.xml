<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wi_primary_bg"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.TheHinduCalender.AppWidgetContainer">


    <LinearLayout
        android:id="@+id/topContentContainerW2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/w2_top_container_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topSubContentContainerW2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTextViewW2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="13dp"
                android:gravity="center"
                android:shadowColor="@color/w2_date_shadow_color"
                android:shadowRadius="15"
                android:text="1 Jan, 2021"
                android:textColor="@color/white"
                android:textSize="26dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/dayTextViewW2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:shadowColor="@color/w2_day_shadow_color"
                android:shadowRadius="15"
                android:text="Friday"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/HorizontalDividerView" />

    <TextView
        android:id="@+id/hinduDateW2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="13dp"
        android:shadowColor="@color/w2_hindu_date_shadow_color"
        android:shadowRadius="15"
        android:text="Vikram Era 2077 /  Magshar Ved Bij"
        android:textColor="@color/white"
        android:textSize="14dp"
        tools:ignore="HardcodedText,SpUsage" />

    <LinearLayout style="@style/HorizontalDividerView" />


    <TextView
        android:id="@+id/zodiacSignW2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:shadowColor="@color/w2_zodiac_sign_shadow_color"
        android:shadowRadius="15"
        android:text="Gemini"
        android:textColor="@color/white"
        android:textSize="18dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/choghadiyaTextViewW2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:shadowColor="@color/w2_zodiac_sign_shadow_color"
        android:shadowRadius="15"
        android:text="Choghadiya : Shubh"
        android:textColor="@color/white"
        android:textSize="18dp"
        tools:ignore="HardcodedText,SpUsage" />


</LinearLayout>