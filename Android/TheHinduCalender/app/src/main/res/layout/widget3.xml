<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wi_primary_bg"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.TheHinduCalender.AppWidgetContainer">


    <LinearLayout
        android:id="@+id/topContentContainerW3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topSubContentContainerW3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTextViewW3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="13dp"
                android:gravity="center"
                android:shadowColor="@color/w3_date_shadow_color"
                android:shadowRadius="15"
                android:text="1 Jan, 2021"
                android:textColor="@color/white"
                android:textSize="26dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/dayTextViewW3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:shadowColor="@color/w3_day_shadow_color"
                android:shadowRadius="15"
                android:text="Friday"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/HorizontalDividerView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wi_middle_container_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hinduDateW3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:shadowColor="@color/w3_hindu_date_shadow_color"
            android:shadowRadius="15"
            android:text="Vikram Era 2077 /  Magshar Ved Bij"
            android:textColor="@color/white"
            android:textSize="14dp"
            tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>

    <LinearLayout style="@style/HorizontalDividerView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:shadowColor="@color/w3_zodiac_sign_shadow_color"
        android:shadowRadius="15"
        android:text="Gemini"
        android:textColor="@color/white"
        android:textSize="18dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:shadowColor="@color/w3_zodiac_sign_shadow_color"
        android:shadowRadius="15"
        android:text="Shubh -> Char"
        android:textColor="@color/white"
        android:textSize="18dp"
        tools:ignore="HardcodedText,SpUsage" />


</LinearLayout>